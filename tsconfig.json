{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "outDir": "./dist-esm",
    "rootDir": "./src",
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/applicationinsights-core-js.ts",
    "./src/JavaScriptSDK/**",
    "./src/JavaScriptSDK.Enums/**",
    "./src/JavaScriptSDK.Interfaces/**",
    "./src/JavaScriptSDK.Tests/Selenium/ApplicationInsightsCore.Tests.ts",
    "./src/JavaScriptSDK.Tests/Selenium/aitests.ts",
    "./src/JavaScriptSDK.Tests/External/**",
    "./src/JavaScriptSDK.Tests/TestFramework/**",
    "./src/JavaScriptSDK.Tests/External"
  ],
  "exclude": ["node_modules/"]
}
